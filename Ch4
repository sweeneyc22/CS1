public class Ch41 {
 
 public static void main(String[] args) {
  System.out.print("Enter a decimal value (0 to 15): "); // Request input from user
  Scanner input = new Scanner(System.in);
  int i = input.nextInt();
 
  if (i < 0 || i > 15) {
   System.out.println(i + " is an invalid input, please enter an integer between 0 and 15"); // If the entered integer is less than 0 or greater than 15, this is not valid input
  }
 
  System.out.println("The hex value is " + Integer.toHexString(i).toUpperCase()); // use method toHexString to convert the integer into a hex, then capitalize if needed.
 
 }
 
}
